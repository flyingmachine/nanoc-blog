%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
    %meta{ "name" => "description", "content" => "home site of Daniel Higginbotham" }
    %title= @item[:title]
    %link{ :href => "/stylesheets/home.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "http://feeds.feedburner.com/FlyingMachineStudios", :rel => "alternate", :type => "application/rss+xml" }

  %body{ :class => @body_class }
    %header
      .title
        %a{:href => "/"} Flying Machine Studios
      .subtitle
        adventures in creating

    #document
      #main
        #contact
          %ul

            %li
              %a{:href => "http://twitter.com/nonrecursive"} @nonrecursive
            %li
              %a{:href => "http://www.linkedin.com/in/danielhigginbotham"} linked in
            %li
              %a{:href => "mailto:daniel@flyingmachinestudios.com"}email

        #content.page
          %h1 Articles

          %section.article
            %ol.pages

              - sorted_articles.each do |article|
                - next if article[:draft]
                %li
                  .date= format_date article[:created_at]
                  %article
                    %header
                      %a{:href => article.path}= article[:title]
                  %p= article[:summary]
    


