!!!
%html{ :lang => "en", "xml:lang" => "en", :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=utf-8" }
      - if @item[:description]
        %meta{ "name" => "description", "content" => @item[:description] }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %title= @item[:title]
    %link{ :href => "/stylesheets/screen.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    - @item[:additional_stylesheets] && @item[:additional_stylesheets].each do |stylesheet|
      %link{ :href => "/stylesheets/#{stylesheet}.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "http://feeds.feedburner.com/FlyingMachineStudios", :rel => "alternate", :type => "application/rss+xml" }

  %body{ :class => @body_class }
    #document
      #main
        #header
          .title
            %a{:href => "/"} Flying Machine Studios
          .utilities
            %a{:href => "/about"} about
            &bull;
            %a{:href => "http://twitter.com/nonrecursive"} @nonrecursive
            &bull;
            %a.feed{:href => "http://feeds.feedburner.com/FlyingMachineStudios"}
              %img{:src => "/assets/images/ui/icon_rss.png", :title => "feed"}
        #content.page
          %h1 Articles

          %section.article
            %ol.pages

              - sorted_articles.each do |article|
                - next if article[:draft]
                %li
                  .date= format_date article[:created_at]
                  %article
                    %header
                      %a{:href => article.path}= article[:title]
                  %p= article[:summary]
                  %p.read_more= link_to("Continue reading", article)
    


